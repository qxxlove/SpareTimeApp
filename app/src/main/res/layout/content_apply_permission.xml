<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_apply_permission"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tjbool.httpwww.sparetimeapp.activity.ApplyPermissionActivity"
    tools:showIn="@layout/activity_apply_permission"
    android:background="@color/common_gray_bg"
    >

     <TextView
         android:id="@+id/text_apply_camera_activity"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:text="申请照相权限"
         android:textSize="20sp"
         android:gravity="center"
         android:background="@color/white"
         />
     <TextView
         android:id="@+id/text_apply_location_activity"
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:text="申请定位权限"
         android:textSize="20sp"
         android:gravity="center"
         android:background="@color/white"
         android:layout_marginTop="@dimen/activity_dimens_ten"
         />

</LinearLayout>
