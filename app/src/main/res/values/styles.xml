<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--AppBar 主题样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!--toolbar 主题样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--toolBar 里标题样式-->
    <style name="ToolbarCenterTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--toolBar 里右面字体样式-->
    <style name="ToolbarRightText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--TabLayout 样式-->
    <style name="TopTabLayout">
        <item name="tabIndicatorColor">@color/accent_bottom_navigation</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabBackground">@color/bg_bottom_navigation</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/accent_bottom_navigation</item>
    </style>

    <!--tab 字体通用样式-->
    <style name="CustomTabTextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4a4a4a</item>
    </style>

    <style name="BarTheme">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>
